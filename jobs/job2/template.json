{
  "variables": {
    "dockerhub_username": "",
    "dockerhub_user_password": "",
    "dockerhub_repository_name": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"java\", \"-jar\", \"calculator-app.war\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt update",
        "apt install ansible -y"
      ]
    },
    {
      "type": "file",
      "source": "/var/lib/jenkins/workspace/job2-provision/job1/build/libs/calculator-app.war",
      "destination": "/home/calculator-app.war"
    },
    {
      "type": "ansible-local",
      "playbook_file": "jobs/job2/playbook.yml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `dockerhub_repository_name`}}",
        "tag": "calculator-app"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `dockerhub_username`}}",
        "login_password": "{{user `dockerhub_user_password`}}"
      }
    ]
  ]
}